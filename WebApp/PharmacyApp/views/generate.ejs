    <p> </p>
    <p> </p>
    <h1 style="text-align: center">Generate your QR code</h1>
    
    
    <div class="container">
        <form action="/code" method="POST">
            <label for="durationInput" id="durationInput">Duration of Prescription (days): </label>
            <div class="container">
                <div class="form-group">
                    <input type="text" class="form-control" name="duration"  placeholder="-">
                </div>
            </div>
            <label for="myTable">Prescription details:</label>
            <div class="container">
                <table id="myTable" class="table order-list">
                    <thead>
                        <tr>
                            <td>Medication</td>
                            <td>Morning</td>
                            <td>Afternoon</td>
                            <td>Evening</td>
                            <td>Night</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="col">
                                    <select class="custom-select" name="medication0">
                                        <option selected disabled>-- Medication --</option>
                                        <option value="00">Ibuprofen 200mg</option>
                                        <option value="01">Citalopram 10mg</option>
                                        <option value="02">Diclofenac 25mg</option>
                                        <option value="03">Atorvastatin 40mg</option>
                                        <option value="04">Amoxicillin 250mg</option>
                                        <option value="05">Paracetamol 500mg</option>
                                        <option value="06">Amlodipine 5mg</option>
                                        <option value="07">Metformin 850mg</option>
                                        <option value="08">Codeine 15mg</option>
                                        <option value="09">Bisoprolol 2.5mg</option>
                                        <option value="10">Aspirin 75mg</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="morning0" value="1">
                                    <input class="form-check-input" type="hidden" name="morning0" value="0">
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="afternoon0" value="1">
                                    <input class="form-check-input" type="hidden" name="afternoon0" value="0">
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="evening0" value="1">
                                    <input class="form-check-input" type="hidden" name="evening0" value="0">
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="night0" value="1">
                                    <input class="form-check-input" type="hidden" name="night0" value="0">
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" style="text-align: left;">
                                <input type="button" class="btn btn-lg btn-block " id="addrow" value="Add Row" />
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Generate QR</button>
            </div>
        </form>
    </div>
        
        
